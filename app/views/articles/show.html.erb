<h1><%= @article.title %></h1>
<p>Posted by <%=@article.user.email %><%= time_ago_in_words(@article.created_at)%>ago</p>
<p><%= @article.body %></p>
<p><%= @article.author %></p>
<h3>Comments:</h3>
<%= render @article.comments %>
<h3>Reply to Article:</h3>
<%= render 'comments/form' %>
<%= link_to "Back",root_path,class: "btn btn-default" %>
<% if user_signed_in? %>
<% if @article.user_id ==current_user.id %>
<%= link_to "Edit Message",edit_article_path(@article),class: "btn btn-default" %>
<%= link_to "Delete Message",article_path(@article),method: :delete,data: {confirm:"Are you sure want to delete think again"},class: "btn btn-default" %>
<% end %>
<% end %>
